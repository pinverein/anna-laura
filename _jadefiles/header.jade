mixin nav-content()
	ul
		{% assign navigation=site.nav | where:'language', page.language %}
		//- p {{navigation['links']}}
		{% for nav in navigation %}
		{% for link in nav.links %}
		li: a(href='#{{link.href}}').scroll-on-page-link {{link.title}}
		{% endfor %}
		{% endfor %} 
		
.mobile-nav
	+nav-content()
	
header
	.header-position
		a(href='#start').scroll-on-page-link
			h1.logo.logo--invisible pin
		
		nav.site-nav
			+nav-content()
		
		.placeholder pin
		
		.mobile-nav-toggle: span
		
